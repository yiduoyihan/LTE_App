<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rl_create_task"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />

    <LinearLayout
        android:id="@+id/layout_create_task1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/layout_toolbar"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_create_task_start_time"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical" />


        <TextView
            android:id="@+id/tv_create_task_person"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/layout_create_task2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/layout_create_task1"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_create_task_group"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical" />


        <TextView
            android:id="@+id/tv_create_task_specialized"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_create_task_company"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/layout_create_task2"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:gravity="center_vertical" />

    <LinearLayout
        android:id="@+id/layout_create_task3"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@id/tv_create_task_company"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="任务名称：" />


        <EditText
            android:id="@+id/et_create_task_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/layout_create_task4"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@id/layout_create_task3"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="任务内容：" />


        <EditText
            android:id="@+id/et_create_task_content"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical" />

    </LinearLayout>


    <Button
        android:id="@+id/btn_create_task"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/layout_create_task4"
        android:layout_marginStart="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="50dp"
        android:background="#359BFD"
        android:gravity="center"
        android:text="创 建 任 务"
        android:textColor="@color/white" />
</RelativeLayout>