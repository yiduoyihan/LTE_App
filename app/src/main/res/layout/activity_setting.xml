<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />

    <LinearLayout
        android:id="@+id/setting_layout1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/layout_toolbar"
        android:layout_marginStart="16dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="16dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="旧密码" />

        <EditText
            android:id="@+id/et_setting_old_pwd"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:gravity="center_vertical"
            android:inputType="text" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/setting_layout2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/setting_layout1"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="新密码" />

        <EditText
            android:id="@+id/et_setting_new_pwd1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:gravity="center_vertical"
            android:inputType="text" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/setting_layout3"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/setting_layout2"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="新密码" />

        <EditText
            android:id="@+id/et_setting_new_pwd2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:gravity="center_vertical"
            android:inputType="text" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_setting_save_pwd"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/setting_layout3"
        android:layout_marginStart="50dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="50dp"
        android:background="#359BFD"
        android:gravity="center"
        android:text="保    存"
        android:textColor="@color/white" />

</RelativeLayout>