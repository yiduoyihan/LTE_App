<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="巡检系统" />

    <com.leidi.lteapp.view.SelfViewPager
        android:id="@+id/vp_main"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />


    <RadioGroup
        android:id="@+id/rg_main_bottom"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#eeeeee"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_main_bottom1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:button="@null"
            android:checked="true"
            android:gravity="center"
            android:text="我的任务"
            android:textColor="@drawable/main_rb_selector"
            android:textSize="12sp" />

        <RadioButton
            android:id="@+id/rb_main_bottom2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:button="@null"
            android:gravity="center"
            android:text="设备监测"
            android:textColor="@drawable/main_rb_selector"
            android:textSize="12sp" />

        <RadioButton
            android:id="@+id/rb_main_bottom3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:button="@null"
            android:gravity="center"
            android:text="告警展示"
            android:textColor="@drawable/main_rb_selector"
            android:textSize="12sp" />

        <RadioButton
            android:id="@+id/rb_main_bottom4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:button="@null"
            android:gravity="center"
            android:text="我的"
            android:textColor="@drawable/main_rb_selector"
            android:textSize="12sp" />

    </RadioGroup>


</LinearLayout>